import sys
sys.path.append('src/chemistry_os/src/facilities')
from class_template import facility
from class_fr5arm import fr5robot

class system(facility):
    
    def __init__(self):
        super().__init__("system")
        self.objects = []  # 用于存储创建的 fr5robot 实例

    def cmd_init(self):
        self.parser.register("fr5robotCreate", self.create_fr5robot, {"name":'', "ip":''}, "create fr5robot")
        self.parser.register("fr5robotDelete", self.create_fr5robot, {"name":''}, "delete fr5robot")


    def create_fr5robot(self,name:str,ip:str):
        if name != '' or ip != '':
            print("create fr5robot:",name,ip)
            new_robot = fr5robot(name, ip)
            self.objects.append(new_robot)
        else:
            print("failed to create fr5robot:",name,ip)
        
    def destroy_fr5robot(self, name: str):
        if name == '':
            print("failed to delete fr5robot:",name)
            return

        for i, tuple_t in enumerate(facility.TupleList):
            objectname = tuple_t[0]
            robot = tuple_t[2]
            if name == objectname and isinstance(robot, fr5robot):
                # 删除对象 robot
                del robot
                # 删除元组
                del facility.TupleList[i]
                print(f"fr5robot {name} destroyed successfully.")
                return
            
        print(f"No matching robot found for name: {name}")      